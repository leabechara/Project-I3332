@model IEnumerable<Teacher>

@{
    ViewBag.Title = "Teachers";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    .container {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    h1 {
        color: #007bff;
    }

    .btn-custom {
        background-color: #28a745;
        color: #fff;
        border: none;
        padding: 8px 16px;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #218838;
        }

    .table {
        border-radius: 10px;
        overflow: hidden;
    }

    .thead-dark th {
        background-color: #343a40;
        color: #fff;
    }

    .btn-edit {
        background-color: #ffc107;
        color: #212529;
    }

    .btn-delete {
        background-color: #dc3545;
        color: #fff;
    }
</style>

<div class="container">
    <div class="text-center">
        <h1 class="display-4">@ViewBag.Title</h1>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Add" class="btn btn-custom ms-2">Add Teacher</a>
    </div>

    <div class="table-responsive mt-4">
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Teacher teacher in Model)
                {
                    <tr>
                        <td>@teacher.FirstName</td>
                        <td>@teacher.LastName</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@teacher.TeacherId" class="btn btn-delete">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
