@model Class

@{
    ViewBag.Title = $"{ViewBag.Operation} Class";
}

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Number" class="form-label"></label>
        <input asp-for="Number" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="TeacherId" class="form-label"></label>
        <select asp-for="TeacherId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Teachers, "TeacherId", "FullName", Model.TeacherId))"></select>
    </div>
    <div class="mb-3">
        <label asp-for="DayId" class="form-label"></label>
        <select asp-for="DayId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Days, "DayId", "Name", Model.DayId))"></select>
    </div>
    <div class="mb-3">
        <label asp-for="MilitaryTime" class="form-label"></label>
        <input asp-for="MilitaryTime" class="form-control" />
    </div>
    <input type="hidden" asp-for="ClassId" />
    <button type="submit" class="btn btn-dark">Save</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-dark">Cancel</a>
</form>
